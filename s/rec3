#!/bin/bash
# осуществляется звукозапись данных и сохранение в формате mp3 в указанный файл 
# формат: /s/rec name  - требуется имя файла (без расширения)
# для остановки записи нажимать только CTRL+C !!! (но ничего другого)
cd /z/rec
rec $1.wav
lame --scale 10 $1.wav $1.mp3
rm $1.wav -f
ls /z/rec -la
mpg123 $1.mp3

